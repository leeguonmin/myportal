<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
	PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<!--  VO 객체의 별칭 등록 -->
	<typeAliases>
		<typeAlias alias = "boardVo" type="himedia.myportal.repositories.vo.BoardVo" />
		<typeAlias alias="guestbookVo" type="himedia.myportal.repositories.vo.GuestbookVo" />
		<typeAlias alias="userVo" type="himedia.myportal.repositories.vo.UserVo" />
	</typeAliases>
	<!-- Mapper 등록 -->
	<mappers>
		<mapper resource ="mybatis/mappers/board.xml" />
		<mapper resource="mybatis/mappers/guestbook.xml" />
		<mapper resource="mybatis\mappers/user.xml" />
	</mappers>
</configuration>